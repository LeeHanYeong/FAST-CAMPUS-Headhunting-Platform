<div class="modal fade" id="id-hire-email-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="id-modal-label">메일 발송</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="id-email-subject">제목</label>
                    <input name="subject" id="id-email-subject" class="form-control">
                </div>
                <div class="form-group">
                    <label for="id-email-message">내용</label>
                    <textarea name="message" id="id-email-message" class="form-control" rows="9" style="resize: none;"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-second btn btn-secondary" data-dismiss="modal">닫기</button>
                <button type="button" class="btn-first btn btn-primary" data-dismiss="modal">발송</button>
            </div>
        </div>
    </div>
</div>
