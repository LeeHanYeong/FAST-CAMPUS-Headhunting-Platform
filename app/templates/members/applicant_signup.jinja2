{% extends 'base.jinja2' %}

{% block content_header %}
<header class="content-header row justify-content-center">
	<div class="col-md-8 col-lg-5">
		<div class="title">
			<span>지원자 회원가입</span>
		</div>
	</div>
</header>
{% endblock %}

{% block content %}
<div class="row justify-content-center">
	<div class="login-card card col-md-8 col-lg-5">
		<form action="" method="POST">
			{{ csrf_input }}
			{% for field in form %}
			<div class="form-group">
				<label for="{{ field.id_for_label }}">{{ field.label }}</label>
				{{ field }}
			</div>
			{% endfor %}
			<button class="btn btn-primary btn-lg btn-block mt-4">회원가입</button>
			<div class="text-center mt-3">
				이미 회원이신가요? <a href="{{ url('members:login') }}" class="text-primary ml-1 font-weight-bold">로그인 하기</a>
			</div>
		</form>
	</div>
</div>
{% endblock %}