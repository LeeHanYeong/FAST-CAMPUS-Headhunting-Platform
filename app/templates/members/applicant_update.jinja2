{% extends 'base.jinja2' %}

{% block content %}
<div class="resume">
	<section v-if="applicantDetail" class="resume-section">
		<h2>기본정보</h2>
		<form action="">
			<div class="form-group row">
				<label for="id-lastname" class="col-sm-2 col-form-label">이름</label>
				<div class="col-sm-3">
					<input v-model="applicantDetail.last_name" id="id-lastname" type="text" class="form-control" placeholder="성">
				</div>
				<div class="col-sm-7">
					<input v-model="applicantDetail.first_name" id="id-firstname" type="text" class="form-control" placeholder="이름">
				</div>
			</div>
			<div class="form-group row">
				<label for="id-email" class="col-sm-2 col-form-label">이메일</label>
				<div class="col-sm-10">
					<input v-model="applicantDetail.email" type="email" id="id-email" class="form-control" placeholder="">
				</div>
			</div>
			<div class="form-group row">
				<label for="id-birth" class="col-sm-2 col-form-label">생년월일</label>
				<div class="col-sm-10">
					<input v-model="applicantDetail.birth_date" type="text" id="id-birth" class="form-control" placeholder="YYYY-MM-DD (ex: 1990-01-01)">
				</div>
			</div>
			<div class="form-group row">
				<label for="id-birth" class="col-sm-2 col-form-label">한줄소개</label>
				<div class="col-sm-10">
					<input v-model="applicantDetail.short_intro" type="text" id="id-birth" class="form-control" placeholder="">
				</div>
			</div>

			<div class="form-group row">
				<label>학력사항</label>
			</div>
		</form>
	</section>
	<button v-on:click="getSkillLinkList()">Click</button>
	<button v-on:click="getApplicantProfile()">Click</button>
</div>
{% endblock %}

{% block script %}
<script>
	app.getApplicantProfile();
</script>
{% endblock %}